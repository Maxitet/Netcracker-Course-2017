<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Servlets.LoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InfoServlet</servlet-name>
        <servlet-class>Servlets.InfoServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>InfoServlet</servlet-name>
        <url-pattern>/info.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionLoginServlet</servlet-name>
        <servlet-class>HTTP_Sessions_and_Cookies.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SessionLoginServlet</servlet-name>
        <url-pattern>/HTTP_Sessions_and_Cookies.LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookiesServlet</servlet-name>
        <servlet-class>HTTP_Sessions_and_Cookies.LoginServletCookies</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CookiesServlet</servlet-name>
        <url-pattern>/HTTP_Sessions_and_Cookies.LoginServletCookies</url-pattern>
    </servlet-mapping>r
    
    <servlet>
        <servlet-name>CreateNewUser</servlet-name>
        <servlet-class>HTTP_Sessions_and_Cookies.CreateNewUser</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreateNewUser</servlet-name>
        <url-pattern>/HTTP_Sessions_and_Cookies.CreateNewUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>HTTP_Sessions_and_Cookies.WelcomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomePage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MailServlet</servlet-name>
        <servlet-class>Servlets.EmailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MailServlet</servlet-name>
        <url-pattern>/sendmail.html</url-pattern>
    </servlet-mapping>

</web-app>




